{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": ["@nestjs/swagger"],
    "assets": [
      { 
        "include": "languages/**/*", 
        "outDir": "dist/src" 
      },
      {
        "include": "common/mail/templates/*.pug",
        "outDir": "dist/src"
      }
    ],
    "webpack": false,
    "deleteOutDir": true,
    "watchAssets": false
  }
}
